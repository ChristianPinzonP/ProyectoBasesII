<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.proyecto.controller.LoginViewController"
          alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Iniciar Sesión" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Label text="Correo:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtCorreo" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="txtContrasena" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Iniciar Sesión" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#login"
            style="-fx-font-size: 14px; -fx-padding: 8px 15px;"/>

</GridPane>
